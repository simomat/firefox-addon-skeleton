{
  "name": "firefox-addon-skeleton",
  "description": "Skeleton for a Firefox addon",
  "homepage_url": "https://github.com/simomat/firefox-addon-skeleton",
  "author": "Matthias Simon",
  "version": "1.0.0",
  "manifest_version": 2,
  "permissions": [],
  "applications": {
    "gecko": {
      "id": "firefox-addon-skeleton@infonautika.de",
      "strict_min_version": "42.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "128": "icons/sponge-128.png"
    },
    "default_title": "Whereami?",
    "default_popup": "action/action.html"
  },

  "icons": {
    "128": "icons/sponge-128.png"
  },

  "options_ui": {
    "page": "options/options.html"
  }
}